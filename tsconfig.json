{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "6.0",
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
} 